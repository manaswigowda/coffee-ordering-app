<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:id="@+id/firstLayout"
    android:orientation="vertical"
    android:background="@android:color/holo_purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/mochacoffee" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="Caffee Moccha"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:text="Price: $40"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">
                    <Button
                        android:id="@+id/buttonDecrement1"
                        android:layout_width="38dp"
                        android:layout_height="34dp"
                        android:background="@android:color/transparent"
                        android:onClick="decrement1"
                        android:text="-"
                        android:textColor="@android:color/black" />
                     <TextView
                         android:id="@+id/quantity1"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="2dp"
                         android:text="0"
                         android:textSize="18sp" />
                    <Button
                        android:id="@+id/buttonIncrement1"
                        android:layout_width="38dp"
                        android:layout_height="34dp"
                        android:background="@android:color/transparent"
                        android:onClick="increment1"
                        android:text="+"
                        android:textColor="@android:color/black" />

"
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/caffeelatte" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="Caffee Latte"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:text="Price: $80"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">
                    <Button
                        android:id="@+id/buttonDecrement2"
                        android:layout_width="38dp"
                        android:layout_height="34dp"
                        android:background="@android:color/transparent"
                        android:onClick="decrement2"
                        android:text="-"
                        android:textColor="@android:color/black" />
                    <TextView
                        android:id="@+id/quantity2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="0"
                        android:textSize="20sp" />
                    <Button
                        android:id="@+id/buttonIncrement2"
                        android:layout_width="34dp"
                        android:layout_height="36dp"
                        android:background="@android:color/transparent"
                        android:onClick="increment2"
                        android:text="+"
                        android:textColor="@android:color/black" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal" >
            
            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/cappuccino" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="Cappuccino"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:text="Price: $100"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="14dp">
                    <Button
                        android:id="@+id/buttonDecrement3"
                        android:layout_width="38dp"
                        android:layout_height="34dp"
                        android:background="@android:color/transparent"
                        android:onClick="decrement3"
                        android:text="-"
                        android:textColor="@android:color/black" />
                    <TextView
                        android:id="@+id/quantity3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="0"
                        android:textSize="20sp" />
                    <Button
                        android:id="@+id/buttonIncrement3"
                        android:layout_width="38dp"
                        android:layout_height="34dp"
                        android:background="@android:color/transparent"
                        android:text="+"
                        android:textColor="@android:color/black" />
                </LinearLayout>
       
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:elevation="22dp"
                android:text="Total Price:"
                android:textColor="@android:color/black"
                android:textSize="40sp" />
            <TextView
                android:id="@+id/price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:text="$0"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@android:color/black"
        android:elevation="12dp"
        android:ems="25"
        android:onClick="submitOrder"
        android:text="Order"
        android:textColor="@android:color/white" />
</LinearLayout>




